#!/bin/sh
echo "  >>>>1 <<<<"
id -u
current_user_id=$(id -u)
echo $current_user_id

chown $current_user_id  \
    && mkdir /tmp/vertx-cache \
    && chmod 775 /tmp/vertx-cache
echo "  >>>>2 <<<<"

exec ${QUARKUS_HOME}/application -Dquarkus.http.host=0.0.0.0
# 1 java -jar ${QUARKUS_HOME}/application.jar